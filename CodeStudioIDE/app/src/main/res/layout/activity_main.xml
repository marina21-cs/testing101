<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.MainActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbar_background"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Dark"
                app:titleTextColor="@color/text_primary" />

            <!-- Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/tab_background"
                app:tabGravity="start"
                app:tabMode="scrollable"
                app:tabIndicatorColor="@color/accent"
                app:tabSelectedTextColor="@color/text_primary"
                app:tabTextColor="@color/text_secondary" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Horizontal split: File Tree + Editor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- File Tree Panel (collapsible) -->
                <LinearLayout
                    android:id="@+id/fileTreeContainer"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/sidebar_background"
                    android:visibility="visible">

                    <!-- Panel Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:background="@color/panel_header_background">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="EXPLORER"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <ImageButton
                            android:id="@+id/btnRefreshTree"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_refresh"
                            android:tint="@color/icon_secondary"
                            android:contentDescription="Refresh"
                            tools:ignore="UseAppTint" />

                        <ImageButton
                            android:id="@+id/btnCollapseAll"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_collapse_all"
                            android:tint="@color/icon_secondary"
                            android:contentDescription="Collapse All"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                    <!-- File Tree RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fileTreeRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:overScrollMode="never" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider" />

                <!-- Editor Area -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <io.github.rosemoe.sora.widget.CodeEditor
                        android:id="@+id/codeEditor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/editor_background" />

                    <!-- Empty state -->
                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_code"
                            android:tint="@color/text_disabled"
                            android:alpha="0.5"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Open a file to start editing"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- Terminal Panel (bottom) -->
            <LinearLayout
                android:id="@+id/terminalContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/terminal_background"
                android:visibility="gone">

                <!-- Terminal Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:background="@color/panel_header_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TERMINAL"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <ImageButton
                        android:id="@+id/btnClearTerminal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_clear"
                        android:tint="@color/icon_secondary"
                        android:contentDescription="Clear"
                        tools:ignore="UseAppTint" />

                    <ImageButton
                        android:id="@+id/btnCloseTerminal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        android:tint="@color/icon_secondary"
                        android:contentDescription="Close"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <!-- Terminal Output -->
                <ScrollView
                    android:id="@+id/terminalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/terminalOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/terminal_text"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true" />

                </ScrollView>

                <!-- Terminal Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:background="@color/terminal_input_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ "
                        android:textColor="@color/terminal_prompt"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />

                    <EditText
                        android:id="@+id/terminalInput"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/terminal_text"
                        android:textColorHint="@color/text_disabled"
                        android:hint="Enter command..."
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        tools:ignore="Autofill" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/bottom_nav_background"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_item_color"
            app:itemTextColor="@color/bottom_nav_item_color"
            app:menu="@menu/menu_bottom_nav" />

        <!-- FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_marginBottom="72dp"
            android:src="@drawable/ic_add"
            android:contentDescription="New File"
            app:backgroundTint="@color/accent"
            app:tint="@android:color/white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/drawer_background"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer"
        app:itemTextColor="@color/text_primary"
        app:itemIconTint="@color/icon_primary" />

</androidx.drawerlayout.widget.DrawerLayout>
