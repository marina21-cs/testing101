<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Editor Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editor"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Font Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Font Size"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/fontSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="8"
                    android:valueTo="32"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/fontSizeValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Tab Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tab Size"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/tabSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="2"
                    android:valueTo="8"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/tabSizeValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Switches -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/useSpacesSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Use Spaces for Tabs"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/lineNumbersSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Line Numbers"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/wordWrapSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Word Wrap"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/highlightLineSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Highlight Current Line"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/autoCloseBracketsSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Close Brackets"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/autoCloseQuotesSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Close Quotes"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/autoIndentSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Indent"
                android:textColor="@color/text_primary" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- App Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/darkThemeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dark Theme"
                android:textColor="@color/text_primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/showHiddenFilesSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Hidden Files"
                android:textColor="@color/text_primary" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Auto Save Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Save"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/autoSaveSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Enable Auto Save"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Auto Save Interval"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/autoSaveIntervalSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="5"
                    android:valueTo="300"
                    android:stepSize="5" />

                <TextView
                    android:id="@+id/autoSaveIntervalValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Terminal Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminal"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Terminal Font Size"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.slider.Slider
                    android:id="@+id/terminalFontSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="8"
                    android:valueTo="24"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/terminalFontSizeValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Web Server Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Server"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Server Port"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/webServerPortInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reset to Defaults"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Save"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
